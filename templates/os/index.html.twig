{% extends 'base.html.twig' %}

{% block title %}Os index{% endblock %}

{% block body %}
    <h1>Os index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sequence</th>
                <th>Desconto</th>
                <th>Valor_total</th>
                <th>Data_servico</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for o in os %}
            <tr>
                <td>{{ o.id }}</td>
                <td>{{ o.Sequence }}</td>
                <td>{{ o.desconto }}</td>
                <td>{{ o.valorTotal }}</td>
                <td>{{ o.dataServico ? o.dataServico|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('os_show', {'id': o.id}) }}">show</a>
                    <a href="{{ path('os_edit', {'id': o.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('os_new') }}">Create new</a>
{% endblock %}
