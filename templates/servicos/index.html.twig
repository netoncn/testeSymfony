{% extends 'base.html.twig' %}

{% block title %}Servicos index{% endblock %}

{% block body %}
    <h1>Servicos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>Descricao</th>
                <th>Tempo_medio</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for servico in servicos %}
            <tr>
                <td>{{ servico.id }}</td>
                <td>{{ servico.tipo }}</td>
                <td>{{ servico.descricao }}</td>
                <td>{{ servico.tempoMedio }}</td>
                <td>
                    <a href="{{ path('servicos_show', {'id': servico.id}) }}">show</a>
                    <a href="{{ path('servicos_edit', {'id': servico.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('servicos_new') }}">Create new</a>
{% endblock %}
